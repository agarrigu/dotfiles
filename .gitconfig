[url "ssh://git@github.com/"]
    insteadOf = https://github.com/
[core]
    editor = vi
[init]
    defaultBranch = main
[merge]
    tool = vimdiff
    conflictstyle = diff3
[mergetool]
    prompt = false
[rerere]
	enabled = true
[maintenance]
	auto = false
	strategy = incremental
[include]
	path = .gitconfig.secret
[includeIf "gitdir:~/repos/kernel"]
	path = .gitconfig.kernels
